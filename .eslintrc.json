{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "vue/multi-word-component-names": ["error", {
            "ignores": ["index"]
        }],
        "array-bracket-newline": ["error", "always"],
        "array-element-newline":["error", "always"],
        "block-spacing": "error",
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
    }
}
